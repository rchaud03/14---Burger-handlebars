<div class ="container">

  <div class="row">
   <div class="col-md-12 text-center">
    <h1>BURGER JOINT</h1>
   </div>
  </div>

  <div class="row">
    <div class="col-md-6">

     <h2>Available Burgers</h2>
     <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
     </ul>
  </div>

  <div class="col-md-6">

    <h2>Devoured Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}

       <li>{{this.burger_name}}</li>

        {{/if}}
      {{/each}}
      </ul>
   </div>
  </div>

  <div class="row">
   <div class="col-md-6">
     <h2>Add YOUR Burger</h2>
      <form class="create-form">
      <div class="form-group">
       <label for="ca">Burger Name:</label>
       <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Submit Burger</button>
      </form>

    </div>

  </div>

</div>
